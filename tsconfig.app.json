{
    "extends": "@vue/tsconfig/tsconfig.web.json",
    "include": ["env.d.ts", "src/**/*.ts", "src/**/*.vue"],
    "exclude": ["src/**/__tests__/*", "node_modules"],
    "compilerOptions": {
      "target": "es2017",
      "lib": ["es2017", "DOM", "DOM.Iterable"],
      "composite": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"],
        "$$/*": ["public/*"]
      }
    }
  }